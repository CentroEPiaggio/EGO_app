<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="left|top">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.ashwinvasudevan_dev.egorosimage.RosSurfaceView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rosImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.example.ashwinvasudevan_dev.egorosimage.RosSurfaceView>

        <SurfaceView
            android:id="@+id/shapeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" />

    </RelativeLayout>
</RelativeLayout>